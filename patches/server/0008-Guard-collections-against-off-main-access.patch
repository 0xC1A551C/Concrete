+
+    @Override
+    public Stream<E> stream() {
+        this.check();
+        return this.wrapped.stream();
+    }
+
+    @Override
+    public Stream<E> parallelStream() {
+        this.check();
+        return this.wrapped.parallelStream();
+    }
+
+    @Override
+    public Spliterator<E> spliterator() {
+        this.check();
+        return this.wrapped.spliterator();
